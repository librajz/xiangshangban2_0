<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiangshangban.transit_service.dao.UserCompanyDefaultMapper">
	<resultMap type="com.xiangshangban.transit_service.bean.UserCompanyDefault" id="BaseResultMap">
		<result column="user_id" jdbcType="VARCHAR" property="userId" />
		<result column="company_id" jdbcType="VARCHAR" property="companyId" />
		<result column="current_option" jdbcType="VARCHAR" property="currentOption" />
	</resultMap>
	<sql id="Base_Column_List">
		user_id, company_id, current_option
	</sql>
	<select id="selectByUserId" parameterType="java.lang.String" resultMap="BaseResultMap">
		select 
		<include refid="Base_Column_List"/>
		from user_company
		where user_id = #{userId}
	</select>
</mapper>