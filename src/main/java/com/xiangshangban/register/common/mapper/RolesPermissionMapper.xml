<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiangshangban.register.common.dao.RolesPermissionMapper" >
  <resultMap id="BaseResultMap" type="com.xiangshangban.register.common.bean.RolesPermission" >
    <constructor >
      <arg column="roleid" jdbcType="VARCHAR" javaType="java.lang.String" />
      <arg column="permissionid" jdbcType="VARCHAR" javaType="java.lang.String" />
    </constructor>
  </resultMap>

  <insert id="insert" parameterType="com.xiangshangban.register.common.bean.RolesPermission" >
    insert into u_rolespermission (roleid, permissionid)
    values (#{roleid,jdbcType=VARCHAR}, #{permissionid,jdbcType=VARCHAR})
  </insert>

  <insert id="insertSelective" parameterType="com.xiangshangban.register.common.bean.RolesPermission" >
    insert into u_rolespermission
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="roleid != null" >
        roleid,
      </if>
      <if test="permissionid != null" >
        permissionid,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="roleid != null" >
        #{roleid,jdbcType=VARCHAR},
      </if>
      <if test="permissionid != null" >
        #{permissionid,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>

  <!-- 根据权限ID查找 -->
  <select id="findRolePermissionByPid" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/>
    from u_rolespermission
    where permissionid =  #{id,jdbcType=BIGINT}
  </select>

  <!-- 根据角色ID查找 -->
  <select id="findRolePermissionByRid" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/>
    from u_rolespermission
    where roleid =  #{id,jdbcType=BIGINT}
  </select>

  <!-- 根据权限 && 角色ID查找 -->
  <select id="find" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/>
    from u_rolespermission
    where roleid =  #{rid,jdbcType=BIGINT}
    and  permissionid =  #{pid,jdbcType=BIGINT}
  </select>

  <!-- 根据权限ID删除-->
  <delete id="deleteByPid">
    delete from u_rolespermission where permissionid =  #{id,jdbcType=BIGINT}
  </delete>

  <!-- 根据角色ID删除-->
  <delete id="deleteByRid">
    delete from u_rolespermission where roleid =  #{id,jdbcType=BIGINT}
  </delete>

  <!-- 根据角色ID && 权限ID删除-->
  <delete id="delete">
    delete from u_rolespermission where roleid =  #{rid,jdbcType=BIGINT}
    and  permissionid =  #{pid,jdbcType=BIGINT}
  </delete>

  <!-- 根据角色IDs删除-->
  <delete id="deleteByRids">
    delete from u_rolespermission where roleid in(#{roleIds,jdbcType=VARCHAR})
  </delete>
</mapper>